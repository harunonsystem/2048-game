{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(pkill:*)",
      "Bash(npx tailwindcss init:*)",
      "Bash(pnpm dev:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm update:*)",
      "Bash(pnpm dlx:*)",
      "Bash(pnpm build)",
      "Bash(pnpm test:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm install:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(mv:*)",
      "mcp__typescript__list_tools",
      "mcp__typescript__search_symbols",
      "mcp__typescript__find_references",
      "mcp__typescript__get_definitions",
      "mcp__typescript__get_type_at_symbol",
      "mcp__typescript__get_module_symbols",
      "mcp__typescript__find_import_candidates",
      "mcp__typescript__rename_symbol",
      "mcp__typescript__move_file",
      "mcp__typescript__move_directory",
      "mcp__typescript__ts_get_diagnostics",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__activate_project",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__write_memory",
      "Bash(bun:*)",
      "Bash(git remote:*)",
      "WebFetch(domain:github.com)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run rerun:*)",
      "mcp__serena__list_dir",
      "mcp__serena__find_symbol"
    ],
    "deny": [
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)"
    ],
    "defaultMode": "acceptEdits"
  }
}
